{
    "name": "bedita/bedita",
    "type": "project",
    "description": "BEdita manage app",
    "homepage": "http://bedita.com",
    "license": "LGPL",
    "support": {
        "source": "https://github.com/bedita/bedita",
        "issues": "https://github.com/bedita/bedita/issues"
    },
    "authors": [
        {
            "name": "Chia Lab s.r.l.",
            "email": "dev@chialab.it",
            "homepage": "http://www.chialab.it"
        },
        {
            "name": "ChannelWeb s.r.l.",
            "email": "info@channelweb.it",
            "homepage": "http://www.channelweb.it"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": "3.3.*",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/migrations": "~1.0",
        "cakephp/plugin-installer": "*",
        "firebase/php-jwt": "~4.0"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "cakephp/debug_kit": "~3.2 !=3.5.1",
        "cakephp/bake": "~1.1",
        "phpunit/phpunit": "*",
        "cakephp/cakephp-codesniffer": "master-dev",
        "phpmd/phpmd": "*",
        "fzaninotto/faker": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "BEdita\\Manage\\": "src",
            "BEdita\\API\\": "./plugins/BEdita/API/src",
            "BEdita\\Auth\\": "./plugins/BEdita/Auth/src",
            "BEdita\\Core\\": "./plugins/BEdita/Core/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEdita\\Manage\\Test\\": "tests",
            "BEdita\\API\\Test\\": "./plugins/BEdita/API/tests",
            "BEdita\\Auth\\Test\\": "./plugins/BEdita/Auth/tests",
            "BEdita\\Core\\Test\\": "./plugins/BEdita/Core/tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "post-install-cmd": "BEdita\\Manage\\Console\\Installer::postInstall",
        "post-update-cmd": "BEdita\\Manage\\Console\\Installer::postInstall",
        "post-create-project-cmd": "BEdita\\Manage\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
